<h1>タスク一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th><タスク名></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.detail%>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に消しますか？' }%></td>
  </tr>
<% end %>  
</table>

<%= link_to '新規投稿', new_task_path %>