<h2>管理者専用画面</h2>
<p><%= notice %></p>

<h3>ユーザー一覧</h3>

<table class="table">
<tr>
  <th>ユーザー名</th>
  <th>合計タスク数</th>
  <th>管理者権限</th>
</tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.tasks.count %></td>
    <td><%= user.admin %></td>
    <td><%= link_to '詳細', admin_user_path(user.id) %></td>
    <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
    <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: t('本当に削除しますか?') }%></td>
  </tr> 
<% end %>
  <%= link_to '管理者ユーザー作成', new_admin_user_path %>
  <%= link_to 'ラベル管理画面', admin_labels_path %>
</table>
