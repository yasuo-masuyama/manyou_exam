<h4 class="mb-3">ラベル作成</h4>

<%= form_with(model: @label, local: true, url: admin_labels_path ) do |form| %>
  <% if @label.errors.any? %>
  <div id="error_explanation">
    <h4>Found <%= @label.errors.count %> errors!</h4>
      <ul>
        <% @label.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

    <div class="mt-3"><%= form.label :name %></div>
    <div><%= form.text_field :name %></div>

  <div class="mt-3"><%= form.submit %></div>
<% end %>

<p class="mt-3"><%= link_to '戻る', admin_labels_path %></p>